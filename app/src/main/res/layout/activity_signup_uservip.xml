<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".JavaClass.SignUp_UserVipActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarUservip"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="Đăng ký thành viên vip"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:paddingLeft="30dp"/>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:background="@color/colorGreyDark"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:text="Cấp độ thành viên:"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radio_uservip1"
                    android:layout_marginTop="8dp"
                    android:text="Vip1 (100,000 VND/Tháng)"
                    android:textSize="18dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/layout_vip1"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:background="@drawable/boder_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/textvip1_1"
                        android:textSize="15dp"
                        android:textColor="#424242"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/textvip1_2"
                        android:textSize="15dp"
                        android:textColor="#424242"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/textvip1_3"
                        android:textSize="15dp"
                        android:textColor="#424242"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/textvip1_5"
                        android:textSize="15dp"
                        android:textColor="#424242"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <RadioButton
                    android:id="@+id/radio_uservip2"
                    android:layout_marginTop="8dp"
                    android:text="Vip2 (200,000 VND/Tháng)"
                    android:textSize="18dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/layout_vip2"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:background="@drawable/boder_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/textvip2_1"
                        android:textSize="15dp"
                        android:textColor="#424242"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/textvip2_2"
                        android:textSize="15dp"
                        android:textColor="#424242"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/textvip2_3"
                        android:textSize="15dp"
                        android:textColor="#424242"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/textvip2_4"
                        android:textSize="15dp"
                        android:textColor="#424242"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/textvip1_5"
                        android:textSize="15dp"
                        android:textColor="#424242"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <RadioButton
                    android:id="@+id/radio_uservip3"
                    android:layout_marginTop="8dp"
                    android:text="Vip3/Salon (300,000 VND/Tháng)"
                    android:textSize="18dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/layout_vip3"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:background="@drawable/boder_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/textvip3_1"
                        android:textSize="15dp"
                        android:textColor="#424242"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/textvip3_2"
                        android:textSize="15dp"
                        android:textColor="#424242"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/textvip3_3"
                        android:textSize="15dp"
                        android:textColor="#424242"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/textvip2_4"
                        android:textSize="15dp"
                        android:textColor="#424242"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/textvip3_4"
                        android:textSize="15dp"
                        android:textColor="#424242"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/textvip3_5"
                        android:textSize="15dp"
                        android:textColor="@color/colorReb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RadioGroup>

            <TextView
                android:text="Thời hạn:"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/duration_tv"
                android:text="Chọn mức thời hạn"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"
                android:padding="8dp"
                android:background="@drawable/boderedt"
                android:drawableEnd="@drawable/ic_expand_more"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Tổng chi phí:"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sumMoney_tv"
                    android:text="0"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorReb"
                    android:textAlignment="textEnd"
                    android:padding="8dp"
                    android:background="@drawable/boder_price"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="VNĐ"
                    android:textSize="18dp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGreyDark"
                android:layout_marginTop="16dp"/>

            <TextView
                android:text="Phương thức thanh toán:"
                android:textSize="16dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="- Chuyển khoản qua tài khoản ngân hàng:"
                android:textSize="14dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text=" Người thụ hưởng:"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Võ Quang Ánh"
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Số tài khoản:"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="0201199899999"
                    android:textSize="16dp"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="ngân hàng"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:text="MB Bank"
                    android:textColor="@color/colorBlue"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:text="chi nhanh Hưng Yên."
                android:textSize="14dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Hoặc stk:"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="104867836290"
                    android:textSize="16dp"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="ngân hàng"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:text="Viettin Bank"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:text="chi nhanh Hưng Yên."
                android:textSize="14dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="- Nội dung chuyển khoản: 'Loại tk + mã tk'"
                android:textSize="14dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/layoutdieukhoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkdieukhoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:checked="true"
                    android:gravity="top"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="Tôi đồng ý với điều khoản và quy định của CarCenter" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_SignUp_Uservip"
                android:text="Đăng ký"
                android:textSize="18dp"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>