<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JavaClass.Postpurchase">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPostPurchase"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Đăng tin mua xe"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:gravity="center|left"
            android:paddingLeft="50dp"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"/>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="Chú ý: Chỉ đăng tin mua xe ở đây. Không đăng tin bán xe hay tin rao vặt khác...\nTiêu đề và nội dung phải nhập bằng tiếng việt có dấu"
                android:textSize="16dp"
                android:textColor="@color/colorReb"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bdbdbd"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Phân hạng mức tiền:"
                    android:textSize="18dp"
                    android:textColor="@color/colorBlack" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/boderedt"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/price_range_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:padding="8dp"
                        android:paddingRight="8dp"
                        android:text="Chọn mức tiền"
                        android:textSize="18dp"/>
                    <Spinner
                        android:id="@+id/spinner_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Tiêu đề:"
                    android:textSize="18dp"
                    android:textColor="@color/colorBlack" />

                <EditText
                    android:id="@+id/purchase_title_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/boderedt"
                    android:padding="8dp"
                    android:hint="Nhập tiêu đề"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Nội dung:"
                    android:textSize="18dp"
                    android:textColor="@color/colorBlack" />

                <EditText
                    android:id="@+id/purchase_content_edt"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/boderedt"
                    android:padding="8dp"
                    android:gravity="top"
                    android:hint="Nhập nội dung"
                    android:textSize="14dp"/>
            </LinearLayout>

             <Button
                android:id="@+id/postpurchase_btn"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                 android:layout_marginBottom="16dp"
                android:background="@drawable/bg2"
                android:text="Đăng tin"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"/>


        </LinearLayout>
        
    </ScrollView>

</LinearLayout>